                  <% branchs.forEach(function(branch){ %>
                    <option class="opt-style" value="<%=branch.branchID%>"><%=branch.branchName%></option>
                <% }); %> 
            </select>      
        </div>
        <div class="col-3">
          <button class="button btn-showtime" type="submit">Showtime</button> 
        </div>
      <!-- </form> -->

      <div class="col-3">
        <div class="form-inline search">
          <input class="form-control form-control-sm mr-3 w-75" type="text" placeholder="Search...">
          <span><i class="fa fa-search" aria-hidden="true"></i></span>
      </div>
      </div>
    </div>
  </div>
</form>

